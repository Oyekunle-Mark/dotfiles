# start sway manually
alias start_sway='dbus-run-session sway'

# power management
alias sus='sudo systemctl suspend'
alias off='sudo systemctl poweroff'
alias reboot='sudo systemctl reboot'

# alsa aliases
alias vol_up='amixer set Master 10%+'
alias vol_down='amixer set Master 10%-'
alias vol='amixer get Master'

# add poetry to path
export PATH="/home/oye/.local/bin:$PATH"
